<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudisApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StudisApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialogMenu" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="textColorAlertDialogListItem">@color/text</item>
        <item name="android:textColorAlertDialogListItem">@color/text</item>
        <item name="checkboxStyle">@color/text</item>
        <item name="android:checkboxStyle">@color/text</item>
        <item name="android:background">@color/downloader_background</item>
    </style>

    <style name="dropdown">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="popup">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/secondaryBackground</item>
    </style>

</resources>